<div class="container" id="show-filter">
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col-8">
            {{#each userProjects}}
            {{log user.email}}
            <div class="row">
                <div class="col-8">
                    <div class="card-deck" style="width: 50rem;" id="project-card">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title display-4">
                                    {{project_name}}
                                </h5>
                                <h5 class="card-subtitle mb-2 text-dark">
                                    {{user.name}}
                                </h5>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    {{user.institution}}
                                </h6>
                                <h4 class="card-text">
                                    {{abstract}}
                                </h4>
                                <h6><span class="badge bg-secondary">Subject:
                                        {{subject}}
                                    </span><span class="badge bg-secondary">Ongoing
                                        Status:
                                        {{ongoing_status}}
                                    </span><span class="badge bg-secondary">Seeking
                                        Collaborators:
                                        {{collab_status}}
                                    </span></h6>
                                <h6><span>Check out my project here:</span><a href="#" class="card-link">
                                        {{project_url}}
                                    </a> </h6>
                                     <div class="m-4">
                                        <button value={{id}} class="btn btn-outline-dark btn-lg rounded-pill delete "
                                            >delete</button>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="col-2">

        </div>
    </div>
</div>
